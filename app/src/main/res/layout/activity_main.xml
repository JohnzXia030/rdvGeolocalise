    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:gravity="center|center"
        android:orientation="vertical">

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>